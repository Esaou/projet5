{% extends "/frontoffice/layout.html.twig" %}

{% block title %}Centre de santé l'Étoile | Activités{% endblock %}

{% block content %}

    <section class="container presentation">

        <div class="container maxWidth" style="margin-bottom:25px;">

            <div>

                <h5 class="colorTitle">{{ showActivites.activite|raw }}</h5> 
                <hr/>
                {{ showActivites.description|raw }}

            </div>

        </div>
        <div class="container maxWidth" style="margin-bottom:25px;">

            <div>

                <h5 class="colorTitle">Liste des {{ showActivites.titre|raw }} :</h5> 
                <hr/>
                {% for professionnel in professionnels %}
                <article class="psy">
                {% if professionnel.photo == null %}
                    <img src="images/id.jpg" alt="photoID" class="photoId">
                {% else %}
                    <img src="images/{{ professionnel.photo }}" alt="photoID" class="photoId">
                {% endif %}
                    <div class="infoPro">
                        <span class="nomPro">{{ professionnel.nom|raw }}</span>
                        <span class="statutPro">{{ professionnel.titre|raw }}</span>
                        <span class="emplacement">Rez-de-chaussée</span>
                        <span class="surRdv">Sur rendez-vous</span>
                    </div>
                </article>
                {% endfor %}

            </div>

        </div>

    </section>

{%  endblock %}
