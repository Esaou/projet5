{% extends "/backoffice/layout.html.twig" %}

{% block content %}

    <section class="container presentation">

        <div class="container rounded dashboard">

            <h4 style="margin-bottom:20px;" class="colorTitle">Vos activit√©s</h4> 
            <table class="table table-striped table-responsive-sm text-center">
                <thead>
                    <tr class="colorTitle">
                        <th scope="col">Nom</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for activite in activites %}
                        <tr>
                            <td>{{ activite.activite|raw }}</td>
                            <td>
                                <a href="?p=admin.posts.edit&id={{ activite.id|raw }}" class="btn btn-outline-primary"><i class="fas fa-pen"></i></a>
                                <form action="?p=admin.posts.delete&id={{ activite.id|raw }}" method="post" style="display:inline;">
                                    <input type="hidden" name="token" id="token" value=""/>
                                    <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>

    </section>

{%  endblock %}