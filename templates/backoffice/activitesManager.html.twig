{% extends "/backoffice/layout.html.twig" %}

{% block title %}Administration | Activités{% endblock %}

{% block content %}

        <div class="card-body" style="padding-top:0px!important;padding-bottom:0px!important;">
            <h4 class="card-title colorTitle">Activités</h4>
            <hr/>
            <a href="?action=addActivite" class="btn btn-success" style="margin-bottom:20px;">Ajouter une activité</a>
            <table class="table table-striped table-responsive-sm text-center">
                <thead>
                    <tr class="colorTitle">
                        <th scope="col">Nom</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody style="color:rgb(90,90,90);font-size:15px;">
                    {% for activite in activites %}
                        <tr>
                            <td>{{ activite.activite|raw }}</td>
                            <td>
                                <a href="?action=editActivite&id={{ activite.id|raw }}" class="btn btn-primary">Modifier</a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{ activite.id|raw }}">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <div class="modal fade" id="exampleModal{{ activite.id|raw }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-exclamation-circle"></i> Confirmation</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">

                                                Confirmez la supression de l'activité : {{ activite.activite|raw }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                <form action="?action=deleteActivite&id={{ activite.id|raw }}" method="post" style="display:inline;">
                                                    <input type="hidden" name="token" id="token" value="{{ token|raw }}"/>
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                                
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="d-flex justify-content-center colorTitle">
            Pages :
            {% for i in 1.. pagesTotales %}
                {% if i == pageCourante %}
                <span class="page" style='display:flex;justify-content:flex-end;min-width:20px;font-size:18px;text-decoration:underline;'>{{ i }}</span>
                {% else %}
                <a class="page" href='index.php?action=activitesManager&page={{ i }}' style='display:flex;justify-content:flex-end;min-width:20px;font-size:18px;'>{{ i }}</a>
                {% endif %}
            {% endfor %}
            </div>
        </div>

{%  endblock %}