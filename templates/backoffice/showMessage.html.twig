{% extends "/backoffice/layout.html.twig" %}

{% block title %}Administration | Message{% endblock %}

{% block content %}

        <div class="card-body" style="padding-top:0px!important;padding-bottom:0px!important;">
            <h4 class="colorTitle">Message de {% for message in messages %}
            {{ message.nom|raw }}
                {% endfor %}</h4>
            <hr/>
            <table class="table table-striped table-responsive-sm text-left colorTitle" style="font-family:sans-serif;margin-top:25px;">
                <tbody>
                    {% for message in messages %}
                        <tr>
                            <th>Nom</th>
                            <td>{{ message.nom|raw }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ message.email|raw }}</td>
                        </tr>
                        <tr>
                            <th>Objet</th>
                            <td>{{ message.objet|raw }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>le {{ message.date|date("d/m/Y") }} à {{ message.date|date("H") }}h{{ message.date|date("s") }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table> 
            {% for message in messages %}
                <h5 class="colorTitle" style="margin-top:25px;">Contenu</h5>
                <p class="text-left text-dark container rounded border border-muted bg-light" style="padding:10px;margin-top:20px;margin-bottom:30px;">{{ message.message|raw }}</p>
                <p class="text-right"><a class="btn btn-primary" href="index.php?action=messagesManager">Retour à la liste</a></p>
            {% endfor %}
        </div>

{%  endblock %}