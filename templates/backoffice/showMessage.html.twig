{% extends "/backoffice/layout.html.twig" %}

{% block content %}

        <h4 class="text-primary colorTitle">Message de {% for message in messages %}
        {{ message.nom|raw }}
            {% endfor %}</h5></h4>
        <div class="card-body">
            <table class="table table-striped table-responsive-sm text-left colorTitle" style="font-family:sans-serif;">
                <tbody>
                    {% for message in messages %}
                        <tr>
                            <th>Nom</th>
                            <td>{{ message.nom|raw }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ message.email|raw }}</td>
                        </tr>
                        <tr>
                            <th>Objet</th>
                            <td>{{ message.objet|raw }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ message.date|raw }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table> 
            {% for message in messages %}
                <h5 class="colorTitle" style="margin-top:35px;">Contenu</h5>
                <p class="text-left text-dark container rounded border border-muted bg-light" style="padding:10px;margin-top:20px;margin-bottom:30px;">{{ message.message|raw }}</p>
                <form action="?p=admin.posts.deleteCandidature&id={{ message.id|raw }}" method="post" style="display:inline;">
                    <input type="hidden" name="token" id="token" value=""/>
                    <button type="submit" class="btn btn-danger">Supprimer ce message</button>
                </form>
                <a class="btn btn-outline-primary" href="index.php?action=messagesManager">Retour Ã  la liste</a>
            {% endfor %}
        </div>

{%  endblock %}