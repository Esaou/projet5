{% extends "/backoffice/layout.html.twig" %}

{% block content %}

    <section class="container presentation">

        <div class="container rounded dashboard">

            <h5 class="text-center colorTitle" style="margin-top:15px;margin-bottom:30px;">Message de{% for message in messages %} 
            {{ message.nom|raw }}
            {% endfor %}</h5>
        <table class="table table-striped table-responsive-sm text-center " style="font-family:sans-serif;">
            <thead>
                <tr class="colorTitle">
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Objet</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                {% for message in messages %}
                    <tr>
                        <td>{{ message.nom|raw }}</td>
                        <td>{{ message.email|raw }}</td>
                        <td>{{ message.objet|raw }}</td>
                        <td>{{ message.date|raw }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table> 
        {% for message in messages %}
            <h5 class="text-center colorTitle" style="margin-top:35px;">Contenu</h5>
            <p class="text-left border border-muted rounded shadow-sm p-3 mb-5 text-dark bg-white" style="margin-top:30px;">{{ message.message|raw }}</p>
            <form action="?p=admin.posts.deleteCandidature&id={{ message.id|raw }}" method="post" style="display:inline;">
                <input type="hidden" name="token" id="token" value=""/>
                <button type="submit" class="btn btn-danger">Supprimer ce message</button>
            </form>
        {% endfor %}

        </div>

    </section>

{%  endblock %}